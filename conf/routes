# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /slides                     controllers.Application.slides

GET     /grep                       controllers.Application.grepDictionary(search: String)
GET     /colors                     controllers.Application.colorsQuantization(url: String)

GET     /find                       controllers.Application.find
GET     /curl                       controllers.Application.curl
GET     /audioEchoEffectGenerate    controllers.Application.audioEchoEffectGenerate

GET     /webradio.ogg               controllers.Application.webRadioWithEcho
GET     /distant.avi                controllers.Application.downloadReEncodeAndStreamVideo
GET     /local.avi                  controllers.Application.reEncodeAndStreamVideo


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
